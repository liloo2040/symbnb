{% extends 'base.html.twig' %}

{% block title %}Création d'une annonce
{% endblock %}

{% block body %}

    <div class="container">
        <h1>Créer une nouvelle annonce</h1>
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr':{'class': 'form-control', 'placeholder': 'Titre de l\'annonce'}}) }}
        </div>
        <button class="btn btn-primary" type="submit">Créer la nouvelle annonce</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
