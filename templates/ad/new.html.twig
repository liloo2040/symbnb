{% extends "base.html.twig" %}

{% block title %}Création d'une annonce
{% endblock %}

{% form_theme form _self %}


{% block body %}
    <div class="container">
        <h1>Créer une nouvelle annonce</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button class="btn btn-primary" type="submit">Créer la nouvelle annonce</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _ad_images_widget %}
    <p>Ajouter vos images</p>
    {{ form_widget(form) }}
    <div class="form-group">
        <button class="btn btn-primary" id="add-image" type="button">
            Ajouter une image
        </button>
    </div>
{% endblock %}


{% block _ad_images_entry_row %}

    {{ form_widget(form) }}

{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button class="btn btn-danger" data-action="delete" data-target="#block_{{id}}" type="button">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('#add-image').click(function () { // Récupération des futurs numéros de champs créés
            const index = $('#ad_images div.form-group').length;

            // Récupération du prototype des entrées
            const tmpl = $('#ad_images').data('prototype').replace(/__name__/g, index);

            // Injection du code au sein de la div
            $('#ad_images').append(tmpl);

            // Gestion du bouton supprimer
            handleDeleteButtons();
        });

        function handleDeleteButtons() {
            $('button[data-action="delete"]').click(function () {
                const target = this.dataset.target;
                $(target).remove();
            });
        }
        handleDeleteButtons();
    </script>


{% endblock %}
