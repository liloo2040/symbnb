{% extends "base.html.twig" %}

{% block title %}Création d'une annonce{% endblock %}


{% form_theme form _self %}


{% block body %}

    <div class="container">
        <h1>Créer une nouvelle annonce</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button class="btn btn-primary" type="submit">Créer la nouvelle annonce</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _ad_images_widget %}

    <p>Ajouter vos images</p>
        {{ form_widget(form) }}
        
    <div class="form-group">
    
        <button class="btn btn-primary" id="add-image" type="button">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ad_images_entry_row %}

    {{ form_widget(form)}}

{% endblock %}

{% block _ad_images_entry_widget %}

    <div class="form-group">
        <div class="row">
            <div class="col">
                {{ form_widget(form.url) }}
            </div>
            <div class="col">
                {{ form_widget(form.caption) }}
            </div>
        </div>
    </div>

{% endblock %}
